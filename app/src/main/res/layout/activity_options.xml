<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ustawienia"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/BasicMargin"/>

    <ScrollView
        android:id="@+id/scrollable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttons">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/actionBarColorPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/BasicMargin"
                android:paddingEnd="@dimen/BasicMargin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wybierz kolor paska"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="R"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/BasicMargin"
                        android:layout_marginStart="@dimen/BasicMargin"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                    <com.google.android.material.slider.Slider
                        android:id="@+id/actionBarColorPickerRed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="255"
                        android:stepSize="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="G"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/BasicMargin"
                        android:layout_marginStart="@dimen/BasicMargin"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                    <com.google.android.material.slider.Slider
                        android:id="@+id/actionBarColorPickerGreen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="255"
                        android:stepSize="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="B"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/BasicMargin"
                        android:layout_marginStart="@dimen/BasicMargin"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                    <com.google.android.material.slider.Slider
                        android:id="@+id/actionBarColorPickerBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="255"
                        android:stepSize="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/backgroundColorPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingStart="@dimen/BasicMargin"
                android:paddingEnd="@dimen/BasicMargin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wybierz kolor tła"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="R"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/BasicMargin"
                        android:layout_marginStart="@dimen/BasicMargin"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                    <com.google.android.material.slider.Slider
                        android:id="@+id/backgroundColorPickerRed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="255"
                        android:stepSize="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="G"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/BasicMargin"
                        android:layout_marginStart="@dimen/BasicMargin"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                    <com.google.android.material.slider.Slider
                        android:id="@+id/backgroundColorPickerGreen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="255"
                        android:stepSize="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="B"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/BasicMargin"
                        android:layout_marginStart="@dimen/BasicMargin"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                    <com.google.android.material.slider.Slider
                        android:id="@+id/backgroundColorPickerBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="255"
                        android:stepSize="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fontColorPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingStart="@dimen/BasicMargin"
                android:paddingEnd="@dimen/BasicMargin"
                android:layout_marginBottom="@dimen/BasicMargin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wybierz kolor czcionki"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="R"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/BasicMargin"
                        android:layout_marginStart="@dimen/BasicMargin"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                    <com.google.android.material.slider.Slider
                        android:id="@+id/fontColorPickerRed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="255"
                        android:stepSize="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="G"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/BasicMargin"
                        android:layout_marginStart="@dimen/BasicMargin"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                    <com.google.android.material.slider.Slider
                        android:id="@+id/fontColorPickerGreen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="255"
                        android:stepSize="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="B"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/BasicMargin"
                        android:layout_marginStart="@dimen/BasicMargin"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                    <com.google.android.material.slider.Slider
                        android:id="@+id/fontColorPickerBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="255"
                        android:stepSize="1"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/BasicMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/cancel"
            style="@style/Widget.MaterialComponents.TimePicker.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anuluj" />

        <Button
            android:id="@+id/accept"
            style="@style/Widget.MaterialComponents.TimePicker.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zatwierdź" />
    </com.google.android.material.button.MaterialButtonToggleGroup>
</androidx.constraintlayout.widget.ConstraintLayout>